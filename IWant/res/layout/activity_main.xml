<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#FAEBD7" >

     <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginLeft="50dp"
            android:text="Which category would you like to select?"
            android:textSize="26sp"
            android:textStyle="bold" />
    
    
	 <ImageButton
        android:id="@+id/imageAutomobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/automobile" />
	  <TextView
            android:id="@+id/textAutomobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageAutomobile"
             android:layout_marginLeft="100dp"
            android:singleLine="true"
            android:text="Automobiles"
            android:textSize="18sp"
            android:textStyle="bold" />
  <ImageButton
        android:id="@+id/imageComputers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/computers" />
  
   <TextView
            android:id="@+id/textComputers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageComputers"
             android:layout_marginLeft="300dp"
            android:singleLine="true"
            android:text="Computers"
            android:textSize="18sp"
            android:textStyle="bold" />
   <ImageButton
        android:id="@+id/imageVideoGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginLeft="100dp"
        android:layout_marginTop="250dp"
        android:src="@drawable/videogames" />
   
    <TextView
            android:id="@+id/textVideoGames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageVideoGames"
             android:layout_marginLeft="100dp"
            android:singleLine="true"
            android:text="Video Games"
            android:textSize="18sp"
            android:textStyle="bold" />
    
    <ImageButton
        android:id="@+id/imageJewelry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="250dp"
        android:src="@drawable/jewelry" />
    
     <TextView
            android:id="@+id/textJewelry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageJewelry"
             android:layout_marginLeft="310dp"
            android:singleLine="true"
            android:text="Jewelry"
            android:textSize="18sp"
            android:textStyle="bold" />
     <ImageButton
        android:id="@+id/imageCameras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="400dp"
        android:src="@drawable/cameras" />
     
      <TextView
            android:id="@+id/textLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageCameras"
            android:layout_marginLeft="110dp"
            android:singleLine="true"
            android:text="Cameras"
            android:textSize="18sp"
            android:textStyle="bold" />
    

</RelativeLayout>
